<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @users.present? %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user%></td>
        <td><%= show_user_email(user).to_s%></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>
<h2>Import Users</h2>
<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
